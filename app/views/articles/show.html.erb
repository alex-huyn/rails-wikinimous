<div class="border p-4 shadow-sm rounded">
  <h2 class="text-info"><%= @article.title %></h2>
  <p><%= @article.content %></p>
</div>
<div class="d-flex">
<p><%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-info m-4 px-4" %></p>
<p><%= link_to "Delete this article",
            article_path(@article),
            method: :delete,
            data: { confirm: "Are you sure?" }, class: "btn btn-danger m-4 px-4" %></p>
</div>

<p><%= link_to " < Back to list", articles_path %></p>
