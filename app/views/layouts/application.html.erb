<!DOCTYPE html>
<html>
  <head>
    <title>RailsWikinimous</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar sticky-top bg-light p-3 border-bottom border-primary">
      <%= link_to "Wikinimous", articles_path, class: "text-secondary" %>
      <%= link_to "New article", new_article_path, class: "btn btn-info" %>
    </div>
    <div class="container">
      <div class="row justify-content-center">
        <div class="w-100 m-4">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
